<?xml version="1.0" encoding="UTF-8" ?>
<data-sources>
    <apis>
        <api name="single" desc="只出现一次的click_id"/>
        <api name="multiple" desc="出现多次的click_id"/>
    </apis>

    <table name="click_id_count"
           source="hive"
           sql="select click_id, count(1) count from ad.ad_base_click where dt='${date}' group by click_id"
    />

    <table name="single"
           from="click_id_count"
           sql="select * from click_id_count where count = 1"
    />

    <table name="multiple"
           from="click_id_count"
           sql="select * from click_id_count where count > 1"
   />
</data-sources>